<li class="chunk" id=<%= chunk.id %> >
  <% if chunk.completed? %>
    <div>
      <h3 data-target="chunk-feed.chunkStatus">Chunk Completed!</h3>
      <span data-target="chunk-feed.completion">Completed at: </span>
      <span><%= chunk.completed_at %></span>
    </div>
  <% else %>
    <div>
      <h3 data-target="chunk-feed.chunkStatus">Chunk in Progress</h3>
      <span data-target="chunk-feed.completion">Completion at: </span>
      <span><%= chunk.completion_at %></span>
    </div>
  <% end %>

  <div>
    <span>Title: </span>
    <span><%= chunk.title %></span>
  </div>

  <div>
    <span>Started at: </span>
    <span><%= chunk.created_at %></span>
  </div>

  <div>
    <span>Duration: </span>
    <span><%= chunk.duration %></span>
  </div>
</li>
