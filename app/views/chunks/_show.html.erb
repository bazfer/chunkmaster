<li class="chunk" id=<%= @chunk.id %> >
  <% if Time.now >= chunk.completion_at %>
    <div>
      <h3>Chunk Completed!</h3>
      <span>Completed at: </span>
      <span><%= chunk.completed_at %></span>
    </div>
  <% end %>

  <div>
    <span>Title: </span>
    <span><%= chunk.title %></span>
  </div>

  <div>
    <span>Started at: </span>
    <span><%= chunk.created_at %></span>
  </div>

  <div>
    <span>Duration: </span>
    <span><%= chunk.duration %></span>
  </div>
</li>
